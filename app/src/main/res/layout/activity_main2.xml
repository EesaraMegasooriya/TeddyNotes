<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffecd0"
        android:backgroundTint="#ffecd0"
        tools:context=".SplashActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <!-- Logo or Image -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="262dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="578dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Teddy Notes"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="223dp"
            app:srcCompat="@drawable/teddynoteslogo" />

        <Button
            android:id="@+id/button"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="156dp"
            android:fontFamily="@font/acme"
            android:text="Begin Now" />

        <!-- Add any additional UI elements or animations here -->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>